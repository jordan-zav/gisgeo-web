---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="GisGeo — Geospatial Engineering & Applied Research" lang="en">

  <!-- ================= HERO ================= -->
  <section class="hero">
    <img src="/logo.png" alt="GisGeo logo" class="logo" />

    <h1>Geospatial Engineering & Applied Research</h1>

    <p class="subtitle">
      GIS · Remote Sensing · Spatial Analysis · Scientific & Technical Consulting
    </p>
  </section>

  <!-- ================= WHAT I DO ================= -->
  <section class="services">
    <h2>What I do</h2>

    <div class="grid">
      <div class="card">
        <h3>GIS & Spatial Modeling</h3>
        <p>
          Advanced spatial analysis, structural interpretation and
          geological modeling applied to complex datasets.
        </p>
      </div>

      <div class="card">
        <h3>Remote Sensing</h3>
        <p>
          Satellite data processing, multispectral analysis and
          integration of optical, DEM and radiometric products.
        </p>
      </div>

      <div class="card">
        <h3>Geophysics & Geomatics</h3>
        <p>
          Applied geophysical workflows, lineament interpretation
          and spatial integration of potential-field data.
        </p>
      </div>

      <div class="card">
        <h3>Scientific Computing</h3>
        <p>
          Python-based pipelines using GDAL, GeoPandas, QGIS and
          reproducible scientific workflows.
        </p>
      </div>
    </div>
  </section>

  <!-- ================= STYLES ================= -->
  <style>
    .hero {
      text-align: center;
      padding: 6rem 2rem 4rem;
      background: linear-gradient(
        180deg,
        rgba(0, 0, 0, 0.25),
        rgba(0, 0, 0, 0)
      );
    }

    .logo {
      width: 130px;
      margin-bottom: 1.5rem;
      opacity: 0.95;
    }

    h1 {
      font-size: clamp(2.2rem, 4vw, 2.8rem);
      color: var(--green);
      margin-bottom: 1rem;
    }

    .subtitle {
      font-size: 1.05rem;
      max-width: 760px;
      margin: 0 auto;
      opacity: 0.85;
    }

    .services {
      max-width: 1100px;
      margin: 0 auto;
      padding: 3.5rem 2rem 4.5rem;
    }

    .services h2 {
      display: inline-block;
      margin-bottom: 2.2rem;
      font-size: 1.6rem;
      border-bottom: 2px solid var(--green);
      padding-bottom: 0.3rem;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 1.8rem;
    }

    .card {
      background: var(--card-bg);
      color: var(--card-text);

      border-radius: 18px;
      padding: 1.8rem;

      box-shadow:
        0 18px 50px rgba(0, 0, 0, 0.12),
        0 6px 18px rgba(0, 0, 0, 0.08);

      transition: transform 0.25s ease, box-shadow 0.25s ease;
    }




    :global([data-theme="dark"]) .card {
      box-shadow:
        0 22px 65px rgba(0, 0, 0, 0.7),
        0 8px 22px rgba(0, 0, 0, 0.5);
    }





    .card:hover {
      transform: translateY(-6px);
      box-shadow: 0 18px 55px rgba(0, 0, 0, 0.6);
    }

    .card h3 {
      margin-bottom: 0.6rem;
      color: var(--green);
      font-size: 1.15rem;
    }

    .card p {
      font-size: 0.95rem;
      line-height: 1.55;
      opacity: 0.9;
    }
  </style>

</BaseLayout>
